<% if (post.link){ %>
  <% if (page_type != 'archive'){ %>
    <h1>
      <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
    </h1>
    <% } else { %>
    <span>
      <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
    </span>
  <% } %>
<% } else if (post.title){ %>
  <% if (page_type == 'index'){ %>
    <h1>
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h1>
  <% } else if (page_type == 'archive'){ %>
    <span>
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
    </span>
  <% } else { %>
    <h1 class="<%= class_name %>">
      <%= post.title %>
    </h1>
  <% } %>
<% } %>