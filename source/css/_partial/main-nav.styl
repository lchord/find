#main-nav
    overflow: hidden
    z-index: 1018
    position: absolute
    top: 0
    right: 0
    left: 0
    
.nav-wrap
    display: flex
    width: 900px
    margin: auto
    align-items: center
    padding: 0 5px
.logo
    display: inline-block
    padding: 5px
    font-size: 32px
    font-weight: 800
    letter-spacing: 1px
    color: #ffffff

#menu
    display: flex
    flex-direction: row
    padding-left: 0
    margin-bottom: 0
    list-style: none
    margin-left: auto
    a
        text-transform: uppercase
        font-size: 16px
        font-weight: 700
        letter-spacing: 1px
        color: #ffffff
        line-height: 3em
    a+a
        margin-left: 30px