        width: 90%

    #main-nav
        background: #ffffff
    .nav-wrap
        display: flex
        flex-wrap: wrap
        width: 95%
        align-items: center
        
    
    #menu

        -ms-flex-preferred-size: 100%
        flex-basis: 100%
        -ms-flex-positive: 1
        flex-grow: 1
        -ms-flex-align: center
        align-items: center

        a   
            display: block
            width: 100%
            color:#555
            font-size: 1rem
            margin-left: 0.2rem !important
            line-height: 2.5
       
    .nav-items
        width: 100%
        display: -ms-flexbox
        display: flex
        -ms-flex-direction: column
        flex-direction: column
        padding-left: 0
        margin-bottom: 0


    .menu-iv
        display: none !important

    .nav-toggle
 
        display: block
        margin-left: auto !important
      
    
    #logo
        display: inline-block
        padding: 2px
        font-size: 1.5rem
        font-weight: 700
        color: #555555
        text-transform: uppercase
    



    #article-nav
        .article-nav-word
            color: #555555
            font-weight: 600
        .mobile-hidden
            display: none

    .hd-img
        margin-bottom: 30px
    
    .archive-wrap
        margin: 0

/* toggle */
.nav-toggle .line
  width: 30px
  height: 3px
  background-color: #555
  display: block
  margin: 6px
  -webkit-transition: all 0.3s ease-in-out
  -o-transition: all 0.3s ease-in-out
  transition: all 0.3s ease-in-out

.nav-toggle:hover
  cursor: pointer

.nav-toggle.is-active .line:nth-child(2)
  opacity: 0

.nav-toggle.is-active .line:nth-child(1)
  -webkit-transform: translateY(9px) rotate(45deg)
  -ms-transform: translateY(9px) rotate(45deg)
  -o-transform: translateY(9px) rotate(45deg)
  transform: translateY(9px) rotate(45deg)

.nav-toggle.is-active .line:nth-child(3)
  -webkit-transform: translateY(-9px) rotate(-45deg)
  -ms-transform: translateY(-9px) rotate(-45deg)
  -o-transform: translateY(-9px) rotate(-45deg)
  transform: translateY(-9px) rotate(-45deg)

