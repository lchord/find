.hd-img
    background-image: url(/img/hd-img.png)
    background-repeat: no-repeat
    background-position: center
    background-color: #868e96;
    position: relative
    background-size: cover
    margin-bottom: 60px

.overlay
    position: absolute
    top: 0
    left: 0
    height: 100%
    width: 100%
    background-color: #212529
    opacity: .3

.index-hd-title
    position: relative
    margin-top: 150px
    margin-bottom: 20px
    display: block
    color: #ffffff
    h1 
        margin: 0
        font-size: 2.7rem
        text-shadow: 0 3px 6px #222
    h1.index-subtitle
        text-align: center
        margin-bottom: 100px

